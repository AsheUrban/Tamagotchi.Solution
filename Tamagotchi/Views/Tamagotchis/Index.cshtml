<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My Tamagotchis!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using Nursery.Models;

    <h1>My Tamagotchis!</h1>
    @if (Model.Count == 0)
    {
      <p>There are no Tamagotchis currently in your nursery.</p>
    }
    <ul>
      @foreach (Tamagotchi tamagotchi in Model)
      {
        <li><a href='/tamagotchis/@tamagotchi.Id'>@tamagotchi.Name : @tamagotchi.Health</a></li>
      }
    </ul>

    <a href="/tamagotchis/new">Create a NEW Tamagotchi.</a>

    <form action="/tamagotchis/delete" method="post">
      <button type="submit" name="button">Clear ALL Your Tamagotchis</button>
    </form>
  </body>
</html>